---
export interface BlogPostPreviewProps {
	title: string;
	description: string;
	publishDate: string;
	updatedDates: string[];
	url: string;
}

const { title, description, updatedDates, publishDate, url } = Astro.props as BlogPostPreviewProps;

const latestUpdateIfAvailable = updatedDates?.[0];

---

<article class="post-preview">
	<header>
		<a class="hover:underline" href={url}>
			<h1 class="text-2xl font-bold">{title}</h1>
		</a>
		<p class="text-base text-white">{description}</p>
		{latestUpdateIfAvailable ? <div class="flex space-betweem">
			<span>updated: <time class="text-xs">{latestUpdateIfAvailable}</time></span>
			<time class="text-xs">{publishDate}</time>
		</div> : <time class="text-xs">{publishDate}</time>}
	</header>


</article>
